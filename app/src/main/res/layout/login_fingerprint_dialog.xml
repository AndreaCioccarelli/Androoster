<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fingerprint_container"
    android:paddingLeft="24dp"
    android:paddingTop="8dp"
    android:paddingRight="24dp"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/fingerprint_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/fingerprint_base"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/base"
            android:layout_alignParentLeft="true" />

        <RelativeLayout
            android:gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/fingerprint_icon"
                android:src="@drawable/icon_fingerprint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </RelativeLayout>


    <TextView
        android:textSize="16sp"
        android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
        android:id="@+id/fingerprint_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="Touch sensor"
        android:layout_toRightOf="@+id/fingerprint_layout"
        android:layout_alignTop="@+id/fingerprint_layout"
        android:layout_alignBottom="@+id/fingerprint_layout" />
</RelativeLayout>
